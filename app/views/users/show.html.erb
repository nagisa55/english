<section class="user-profile">
  <div class="user-profile-main">
    <div class="user-profile-top">
      <div>
        <% if @user.icon? %>
          <%= image_tag @user.icon.url, class: "icon", :size => "100x100" %>
        <% end %>
      </div>
      <div class="name">
        <%= @user.name %>さんのページ
      </div>
    </div>
    <nav class="navbar navbar-default">
      <ul class="nav navbar-nav user-profile-menu tab-area justify-content-center", id="tab">
        <li class="tab active">TOP</li>
        <li class="tab">投稿一覧</li>
        <li class="tab">お気に入り</li>
        <% if @user == current_user %>
          <li class="tab"><%= link_to "設定", edit_user_path(current_user) %></li>
        <% end %>
      </ul>
    </nav>
    <div class="content-area">
      <div class="user-profile-main-block content show">
        <div class="user-profile-main-block-title">
          <h3>プロフィール</h3>
        </div>
        <div class="user-profile-main-block-detail">
          <div>
            <h4>自己紹介</h4>
            <div class="user-profile-main-block-detail-content">
              <%= @user.profile %>
            </div>
          </div>
          <div>
            <h4>英語力がアップして良かったこと</h4>
            <div class="user-profile-main-block-detail-content">
              <%= @user.good_point %>
            </div>
          </div>
        </div>
        <div class="user-profile-main-block">
          <div class="user-profile-main-block-title">
            <h3>投稿</h3>
          </div>
          <div class="user-profile-main-block-post">
            <% @posts.first(3).each do |post| %>
              <div class="post-all-division">
                <div class="post-title">
                  <%= link_to post_path(post) do %>
                    <p><%= post.title %></p>
                  <% end %>
                  <span class="date">(<%= post.created_at.strftime('%Y/%m/%d') %>)</span>
                </div>
                <div class="post-content">
                  <p class="post-content-title"><%= post.title %></p>
                  <div class="post-body">
                    <%= post.content.truncate(40) %>
                    <%= link_to "続きを読む", post_path(post) %>
                  </div>
                  <p class="comment-btn">
                    <%= link_to post_path(post) do %>
                      <i class="far fa-comment-dots">コメント<%= post.comments.count %>件</i>
                    <% end %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
          <div class= "post-all-view">
            <%=link_to "すべての投稿を見る", posts_path(user_id: @user) %><i class="fa fa-angle-right" aria-hidden="true"></i>
          </div>
        </div>
      </div>
      <div class="content post-all">
        <% @posts.each do |post| %>
          <div class="post-all-division">
            <div class="post-title">
              <%= link_to post_path(post) do %>
                <p><%= post.title %></p>
              <% end %>
              <span class="date">(投稿:<%= post.created_at.strftime('%Y/%m/%d') %>)</span>
            </div>
            <div class="post-content">
              <p class="post-content-title"><%= post.title %></p>
              <div class="post-body">
                <%= post.content.truncate(80) %>
                <%= link_to "続きを読む", post_path(post) %>
              </div>
              <p class="comment-btn">
                <%= link_to post_path(post) do %>
                  <i class="far fa-comment-dots">コメント<%= post.comments.count %>件</i>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="content">
        お気にいいり
      </div>
    </div>
  </div>
</section>