<div class="form">
  <div class="form-details">

      <div class="user-profile-main-block-title">
        <h3>勉強方法を投稿する</h3>
      </div>
      <div class="form-details-post">
      <%= form_with(model:@post, local:true) do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :category_id, "カテゴリー", class: "category"  %>
          <%= f.collection_select :category_id, Category.all, :id, :name, :include_blank => "カテゴリを選択してください" %>
          </div>
        <div class="form-group">
          <%= f.label :content, "勉強方法" %>
          <%= f.text_area :content %>
        </div>
        <div class="post">
          <%= f.submit "投稿する", class: "btn btn-primary w-30" %>
        </div>
      <% end %>
    </div>
  </div>
</div>